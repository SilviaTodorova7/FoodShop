@model ProductTypeViewModel

@{
    if (Model.Products.Count == 0)
    {
        ViewBag.Title = $"You don't have any products from Product type {Model.Name}";
    }
    else
    {
        ViewBag.Title = $"Products from Product type {Model.Name}: {Model.Products.Count}";
    }
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row-cols-2" style="display: flex; justify-content: center">
    <div class="card mb-6">
        <div class="card-body">
            @if (Model.Products.Count != 0)
            {
                @foreach (var row in @Model.Products)
                {
                    <div class="card mb-3" style="display: flex; flex-direction: row;">
                        <h4 class="card-title m-md-3 col-md-4">@row!.ProductName</h4>
                        <h5 class="card-text m-md-3 col-md-4">Quantity: @row.Count</h5>
                        <h5 class="card-text m-md-3 col-md-4">Price: @row.ProductPrice</h5>
                    </div>

                    <div class="text-center">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@row.ProductId" class="btn btn-warning btn-sm mb-4 w-100 fw-bold rounded p-2 btn-dark-text" style="padding: 0.5em; font-size: 1.2em;">View Product</a>
                    </div>
                }
            }
            <div class="text-center">
                <a asp-controller="ProductType" asp-action="All" class="btn btn-success btn-sm mb-2 w-100 fw-bold rounded btn-dark-text" style="padding: 0.5em; margin-top: 2em; font-size: 1.2em;">Back to All Product types</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
