@model ProductDetailsViewModel

@{
    ViewBag.Title = "Details";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row-cols-2" style="display: flex; justify-content: center">
    <div class="card mb-6">
        <img src="@Model.PictureUrl" class="card-img-top img-fluid" style="max-height: 600px; object-fit: contain;" alt="Product Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <div>
                @if (!string.IsNullOrEmpty(@Model.TradeMark))
                {
                  <p class="card-text">@Model.TradeMark</p>
                }
            </div>
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><small class="text-muted">@Model.Category</small></p>
            <p class="card-text"><small class="text-muted">@Model.ProductType</small></p>
            <p class="card-text"><small class="text-muted">Price: @Model.Price</small></p>
        </div>
        <a asp-controller="Cart" asp-action="Mine" asp-route-id="@Model.Id" class="btn btn-success btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Buy Product</a>
        <a asp-controller="Product" asp-action="All" class="btn btn-warning btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Back to All Products</a>
        @* @if (User?.Identity?.Name == @Model.)
        { *@
            
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Edit</a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-rounded mb-2 w-100 p-3 fw-bold">Delete</a>
            <a asp-controller="Comment" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-warning btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Add Comment</a>
        @* } *@
    </div>
</div>

<div class="row-cols-2" style="display: flex; justify-content: center">
    @if(Model.Comments.Count > 0)
        {
        <div class="card mb-6">
            <p></p>
            <p></p>
            <h4 style="text-align: center">All Comments</h4>
            <div class="card-body">
               <p></p>
                <p></p>
                @foreach (var comment in @Model.Comments)
                {
                    <div class="card mb-6" style="padding-left: 0.5em; padding-left: 0.5em; margin-bottom: 1em">
                    <h5 class="card-text">@comment.User</h5>
                    <h6 class="card-text">@comment.Title</h6>
                    <p class="card-text" style="padding-bottom: 1em">@comment.Content</p>
                    </div>
                }
            </div>
        </div>
        }
</div>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
