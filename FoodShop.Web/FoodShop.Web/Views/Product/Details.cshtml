@* @using FoodShop.Web.ViewModels.Product *@

@model ProductDetailsViewModel

@{
    ViewBag.Title = "Details";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row-cols-2">
    <div class="card mb-6">
        <img src="@Model.PictureUrl" class="card-img-top img-fluid" style="max-height: 600px; object-fit: contain;" alt="Product Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <div>
                @if (!string.IsNullOrEmpty(@Model.TradeMark))
                {
                  <p class="card-text">@Model.TradeMark</p>
                }
            </div>
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><small class="text-muted">@Model.Category</small></p>
            <p class="card-text"><small class="text-muted">@Model.ProductType</small></p>
            <p class="card-text"><small class="text-muted">Price: @Model.Price</small></p>
        </div>

        <a asp-controller="Product" asp-action="All" class="btn btn-warning btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Back to All Products</a>
        @* @if (User?.Identity?.Name == @Model.Publisher)
        { *@
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Edit</a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-rounded mb-2 w-100 p-3 fw-bold">Delete</a>
        @* } *@
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
