@model AllProductQueryModel

@{
    ViewBag.Title = "All Products";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form method="get">
    <div class="row">
        <div class="form-group col-md-2 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="Category"></label>
                <select asp-for="Category" class="form-control" style="width: 12.5em">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col-md-2 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="TradeMark"></label>
                <select asp-for="TradeMark" class="form-control" style="width: 12.5em">
                    <option value="">All</option>
                    @foreach (var tradeMark in Model.TradeMarks)
                    {
                        <option value="@tradeMark">@tradeMark</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col-md-2 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="ProductType"></label>
                <select asp-for="ProductType" class="form-control" style="width: 12.5em">
                    <option value="">All</option>
                    @foreach (var productType in Model.ProductTypes)
                    {
                        <option value="@productType">@productType</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="SearchString"></label>
            <input asp-for="SearchString" class="form-control" placeholder="...">
        </div>
        <div class="form-group col-md-2">
            <div class="form-group">
                <label asp-for="ProductSorting"></label>
                <select asp-for="ProductSorting" class="form-control">
                    <option value="0">Price Ascending</option>
                    <option value="1">Price Descending</option>
                    <option value="2">Name Ascending</option>
                </select>
            </div>
        </div>
        <div class="form-group col-md-2 d-flex" style="flex-direction: column-reverse; align-items: start">
            <div class="form-group col-md-2" >
                <input type="submit" value="Search" class="btn btn-primary" style="width:12.2em"/>
            </div>
        </div>
    </div>
</form>
@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }
    var maxPage = Math.Ceiling((double)Model.TotalProducts /
    Model.ProductsPerPage);
}
<p></p>
<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" :
string.Empty)"
           asp-controller="Product"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-category="@Model.Category"
           asp-route-tradeMark="@Model.TradeMark"
           asp-route-productType="@Model.ProductType"
           asp-route-searchString="@Model.SearchString"
           asp-route-productSorting="@((int)Model.ProductSorting)"><<</a>
    </div>
    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
        !Model.Products.Any();
    }
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
 @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="Product"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-category="@Model.Category"
           asp-route-searchTerm="@Model.SearchString"
           asp-route-sorting="@((int)Model.ProductSorting)">>></a>
    </div>
</div>
@if (!Model.Products.Any())
{
    <h2 class="text-center">No houses found by the given criteria!</h2>
}

<div class="text-center row">
    @foreach (var e in Model.Products)
    {
        <div class="card col-3 h-100" style="width: 19.5rem; margin: 0.5em;">
            <img src="@e.PictureUrl" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="Product Image">
            <div class="card-body" style="height: calc(100% - 150px); overflow: auto;">
                <div class="row">
                    <div class="col-12">
                        <div class="title-wrapper" style="height: 6em; overflow: hidden;">
                            <h4 class="card-title mt-1">
                                @e.Name
                                @if (!string.IsNullOrEmpty(e.TradeMark))
                                {
                                    <span> @e.TradeMark</span>
                                }
                                <div style="color:brown"> @e.ProductType</div>
                            </h4>
                        </div>
                    </div>
                </div>
                <p class="mb-0"><span class="fw-bold">Category: </span>@e.Category</p>
                <p class="mb-0"><span class="fw-bold">Price: </span>@e.Price</p>
            </div>
            <div class="row gx-0">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="col-6 px-1">
                        <a asp-controller="Product" asp-action="Buy" asp-route-id="@e.Id" class="btn btn-warning btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">Buy Product</a>
                    </div>
                    <div class="col-6 px-1">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@e.Id" class="btn btn-warning btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">Details</a>
                    </div>
                }
                else
                {
                    <div class="col-12 px-1">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@e.Id" class="btn btn-warning btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">Details</a>
                    </div>
                }
            </div>
        </div>
    }
</div>

