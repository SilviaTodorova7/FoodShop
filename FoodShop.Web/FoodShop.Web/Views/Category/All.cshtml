@model ICollection<CategoryViewModel>

@{
    ViewBag.Title = "All Categories";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row-cols-2" style="display: flex; justify-content: center">
    <div class="card mb-6">
        <div class="card-body">
            @foreach (var e in Model)
            {
                <h2 class="card-title text-center">@e.Name</h2>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning btn-dark-text btn-rounded mb-2 w-100 p-2 fw-bold">Edit</a>
                <a asp-controller="Category" asp-action="ViewProducts" asp-route-id="@e.Id" class="btn btn-warning btn-dark-text btn-rounded mb-4 w-100 p-2 fw-bold">View Products from Category</a>
            }
        </div>
        <a asp-controller="Category" asp-action="Add" class="btn btn-success btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Add Category</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
