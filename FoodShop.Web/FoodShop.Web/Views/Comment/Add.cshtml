@model AddCommentViewModel

<form asp-controller="Comment" asp-action="Add" method="post" asp-route-productId="@Model.ProductId">
    <div class="mb-3">
        <label asp-for="@Model.UserName" class="form-label-add-edit">User Name</label>
        <input asp-for="@Model.UserName" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label-add-edit">Comment Title</label>
        <input asp-for="@Model.Title" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Content" class="form-label-add-edit">Content</label>
        <textarea asp-for="@Model.Content" class="form-control" aria-required="true" rows="5"></textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input class="btn btn-warning btn-dark-text mb-2 w-100 py-3 fw-bold rounded" type="submit" value="Confirm" />
    </div>
</form>

